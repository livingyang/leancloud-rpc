{
  "name": "node-js-getting-started",
  "version": "1.0.0",
  "private": true,
  "description": "A sample Node.js app using Express",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js -- ",
    "test": "node_modules/.bin/jest",
    "watch-test": "node_modules/.bin/jest --watch"
  },
  "dependencies": {
    "body-parser": "1.12.3",
    "connect-timeout": "^1.7.0",
    "cookie-parser": "^1.3.5",
    "ejs": "2.5.7",
    "express": "4.12.3",
    "leancloud-storage": "^3.6.0",
    "leanengine": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^22.4.2",
    "nodemon": "^1.15.1",
    "ts-jest": "^22.0.4",
    "typescript": "^2.7.2",
    "xmlhttprequest": "^1.8.0"
  },
  "engines": {
    "node": "8.x"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
